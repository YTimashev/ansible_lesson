node("linux"){
    stage("Git checkout"){
        git credentialsId: '85797c52-4585-44dc-bb77-3e6835331d79', url: 'https://github.com/aragastmatb/example-playbook.git'
    }

    stage("Run playbook"){
        if ( "${prod_run}" == "true" ){
            sh 'ansible-playbook site.yml -i inventory/prod.yml'

        }
        else{
            sh 'ansible-playbook site.yml -i inventory/prod.yml --check --diff'
        }

    }
}